        "RB": {
            "action": "mode(LGRIP, mouse(Rels.REL_WHEEL, -1), button(Keys.KEY_LEFTCTRL))"
        }, 
        "RGRIP": {
            "action": "button(Keys.KEY_LEFTSHIFT)"
        }, 
        "RPAD": {
            "action": "button(Keys.BTN_MIDDLE)"
        }, 
        "START": {
            "action": "mode(LGRIP, button(Keys.KEY_TAB), button(Keys.KEY_ENTER))"
        }, 
        "STICKPRESS": {
            "action": "mode(LGRIP, button(Keys.KEY_TAB), name('Reverse', button(Keys.KEY_X)))"
        }, 
        "X": {
            "action": "mode(LGRIP, name('Target closest enemy', button(Keys.KEY_COMMA)), name('Use Equipment', button(Keys.KEY_R)))"
        }, 
        "Y": {
            "action": "mode(LGRIP, name('Hail', button(Keys.KEY_LEFTSHIFT) and button(Keys.KEY_M)), name('Headlights', button(Keys.KEY_K)))"
        }
