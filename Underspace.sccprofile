        "action": "mode(LGRIP, click(dpad(1, button(Keys.KEY_4), button(Keys.KEY_1), button(Keys.KEY_2), button(Keys.KEY_3))), click(dpad(1, button(Keys.KEY_Y), button(Keys.KEY_U), button(Keys.KEY_J), button(Keys.KEY_K))))"
