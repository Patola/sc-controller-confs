            "action": "mode(LGRIP, name('Toggle Inventory Filter', button(Keys.KEY_F)), name('Crouch Down', button(Keys.KEY_Z)))"
        }, 
        "X": {
            "action": "mode(LGRIP, name('Defend', button(Keys.KEY_B)), name('Reload', button(Keys.KEY_R)))"
        }, 
        "Y": {
            "action": "mode(LGRIP, name('Sell Junk', button(Keys.KEY_U)), name('Loot All', button(Keys.KEY_T)))"
        }
