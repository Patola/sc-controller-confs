        "action": "mode(LGRIP, click(dpad(1, button(Keys.KEY_Y), button(Keys.KEY_J), button(Keys.KEY_P), button(Keys.KEY_L))), click(dpad(1, button(Keys.KEY_I), button(Keys.KEY_M), button(Keys.KEY_C), button(Keys.KEY_K))))"
